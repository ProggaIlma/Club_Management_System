<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"


    android:paddingBottom="16dp"
    android:paddingRight="20dp"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.progga.anything.clubinfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
       android:paddingTop="60dp"
        android:paddingLeft="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="25dp"
            android:layout_height="wrap_content"
           android:text="Club Name"
            android:id="@+id/clubname1"/>
            <TextView
                android:layout_width="0dp"
                android:textSize="25dp"

                android:layout_weight="3"
                android:layout_height="wrap_content"
              android:text=": Math Club"
                android:id="@+id/clubname2"/>
           </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="25dp"

                android:layout_height="wrap_content"
             android:text="Contacts"
                android:id="@+id/contacts1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textSize="25dp"

                android:layout_height="wrap_content"
               android:text=" : 01818219443"
                android:id="@+id/contacts2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"


                android:layout_height="wrap_content"
               android:text="Address"
                android:layout_weight="2"
                android:textSize="25dp"
                android:id="@+id/address1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textSize="25dp"
                android:layout_height="wrap_content"
               android:text=" : Uttara"
                android:id="@+id/address2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:src="@drawable/ic_action_plus"
        android:elevation="6dp"
        android:id="@+id/fab_event"
        android:visibility="invisible"
        android:backgroundTint="@color/fab2_color"
        app:useCompatPadding="true"

        app:pressedTranslationZ="12dp"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"

        android:src="@drawable/ic_action_update"
        android:elevation="6dp"
        android:id="@+id/fab_update"
        android:backgroundTint="@color/fab1_color"
        android:visibility="invisible"
        app:useCompatPadding="true"
        app:pressedTranslationZ="12dp"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="16dp"
        android:background="@color/fab1_color"
        android:src="@drawable/ic_action_nav"
        android:elevation="6dp"
        android:id="@+id/fab_nav"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:useCompatPadding="true"
        app:pressedTranslationZ="12dp"/>



</android.support.design.widget.CoordinatorLayout>
